{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "module": "es6",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "examples"],
  "plugins": [{ "name": "typescript-plugin-css-modules" }]
}
