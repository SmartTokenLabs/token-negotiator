{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2015",
    "lib": [ "dom" ],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "examples", "package.json"],
  "plugins": [{ "name": "typescript-plugin-css-modules" }]
}
